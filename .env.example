# ============================================
# UnifyOS Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://username:password@localhost:5432/unifyos"
# For Supabase: postgresql://postgres:[password]@db.[project-ref].supabase.co:5432/postgres
# For Railway: Available in Railway dashboard
# For local: postgresql://postgres:password@localhost:5432/unifyos_dev

# ============================================
# NEXTAUTH CONFIGURATION
# ============================================
NEXTAUTH_URL="http://localhost:3000"
# Production: https://app.unifyos.com
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"
# Generate with: openssl rand -base64 32

# ============================================
# OAUTH PROVIDERS
# ============================================

# Google OAuth
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (Optional)
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ============================================
# EMAIL SERVICE (RESEND.COM - RECOMMENDED)
# ============================================
RESEND_API_KEY="re_your_resend_api_key_here"
# Get from: https://resend.com/api-keys
EMAIL_FROM="UnifyOS <onboarding@resend.dev>"
# Production: "UnifyOS <noreply@yourdomain.com>"

# ============================================
# ALTERNATIVE: SMTP EMAIL (if not using Resend)
# ============================================
# EMAIL_SERVER_HOST="smtp.gmail.com"
# EMAIL_SERVER_PORT="587"
# EMAIL_SERVER_USER="your-email@gmail.com"
# EMAIL_SERVER_PASSWORD="your-app-password"

# ============================================
# ENCRYPTION & SECURITY
# ============================================
ENCRYPTION_KEY="generate-with-openssl-rand-hex-32"
# Generate with: openssl rand -hex 32
# Used for encrypting OAuth tokens in database

# ============================================
# APP INTEGRATIONS (Optional - for later)
# ============================================
# Slack OAuth
SLACK_CLIENT_ID="your-slack-client-id"
SLACK_CLIENT_SECRET="your-slack-client-secret"
SLACK_SIGNING_SECRET="your-slack-signing-secret"

# Notion OAuth
NOTION_CLIENT_ID="your-notion-client-id"
NOTION_CLIENT_SECRET="your-notion-client-secret"

# ============================================
# REDIS (Optional - for rate limiting)
# ============================================
# REDIS_URL="redis://localhost:6379"
# For Upstash: redis://default:[password]@[endpoint]:6379

# ============================================
# MONITORING & LOGGING (Optional)
# ============================================
# SENTRY_DSN="your-sentry-dsn"
# LOGTAIL_SOURCE_TOKEN="your-logtail-token"

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_GOOGLE_AUTH=true
ENABLE_GITHUB_AUTH=false
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development
# Values: development, production, test
